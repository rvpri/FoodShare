<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:backgroundTint="#F5F5F5"
    tools:context=".MainActivity"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="FoodShare"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/homecard"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/hand_heart_donate_icon"

                    />

                <TextView
                    android:id="@+id/display"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="0070"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/blue"
                    android:textSize="50dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People served so far"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3A3A3A"
                android:paddingBottom="10dp"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/homecard"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:elevation="20dp"
        >
        <TextView
            android:text="Lets fight hunger together"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#494949" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:text="Donate Now"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/homecard"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:elevation="20dp"
        >

        <ImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_margin="20dp"
            android:background="@drawable/foodimage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="Hearty Thanks for your contribution"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="#494949"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:text="View all Donations"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
